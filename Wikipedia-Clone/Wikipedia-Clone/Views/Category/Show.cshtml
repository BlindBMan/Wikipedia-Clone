@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Wikipedia_Clone.Models.Category

<h3>
    @Model.CategoryTitle
</h3>

@Html.ActionLink("Edit category", "Edit", "Category", new { id = Model.CategoryId }, new { @class="btn btn-default" })
<br /><br />
@using (Html.BeginForm(actionName: "Delete", controllerName: "Category", routeValues: new { id = Model.CategoryId }))
{
    @Html.HttpMethodOverride(HttpVerbs.Delete)

    <button class="btn btn-default" type="submit">
        Delete category
    </button>
}
<br />
@Html.ActionLink("Back to categories", actionName: "Index", controllerName: "Category", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })



