@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Wikipedia_Clone.Models.Category

<h1>
    Categories
</h1>

@foreach (Wikipedia_Clone.Models.Category category in ViewBag.Categories)
{
    <h3>
        @category.CategoryTitle
    </h3>

    @Html.ActionLink("Edit category ", "Edit", "Category", routeValues: new { id = category.CategoryId }, htmlAttributes: null)
    @Html.ActionLink("View category ", "Show", "Category", new { id = category.CategoryId }, null)
    <br />

}

@Html.ActionLink("Add new category", "New", "Category", null, null)
<br />



