@model Wikipedia_Clone.Models.Article

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-heading article-title">
            <span class="article-underline">
                @Model.Title
            </span>
        </h2>
    </div>

    <div class="panel-body">
        @Html.Raw(Model.Content)
    </div>

    <div class="panel-footer">
        <div class="article-details">
            <p class="glyphicon glyphicon-education">
                @if (Model.User != null && Model.User.UserName != null)
                {
                    @Model.User.UserName
                }
            </p>

            <small class="glyphicon glyphicon-calendar">
                @Model.Date.ToString()
            </small>

            <p class="glyphicon glyphicon-knight">
                @Model.Category.CategoryTitle
            </p>
        </div>

        <br />

        <div class="btn-group">
            @if (Model.Protected == false)
            {
                @Html.ActionLink("Edit article", "Edit", "Article", new { Model.Id }, new { @class = "btn btn-default" })
            }

            @if (Model.LastContent != null && (User.IsInRole("Editor") || User.IsInRole("Admin") || User.IsInRole("God")))
            {
                @Html.ActionLink("Show Last State", "ShowChanges", "Article", new { Model.Id }, new { @class = "btn btn-default" })
            }
        </div>

    </div>
</div>


